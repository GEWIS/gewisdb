        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <?php
                $submit = $form->get('submit');
                $submit->setLabel($title);
                $submit->setAttribute('class', 'btn btn-primary');
                ?>
                <?= $this->formButton($submit) ?>
            </div>
        </div>

        <?= $this->form()->closeTag() ?>
    </div>
</div>
